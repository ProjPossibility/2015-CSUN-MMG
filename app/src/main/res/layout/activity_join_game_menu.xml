<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_floating_material_dark"
    tools:context="com.ss12.csun_mmg.peripheralmaze.JoinGameMenu"
    android:id="@+id/connection_layout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/fullscreen_connection_controls">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_symbol"
            android:id="@+id/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/connection_page_title"
            android:id="@+id/textView"
            android:layout_gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Title.Inverse" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_page_description"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|bottom"
            style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse" />
    </FrameLayout>
</FrameLayout>
